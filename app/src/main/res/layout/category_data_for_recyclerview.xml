<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <View
        android:id="@+id/categoryViewDataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cateogryImageViewDataLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintVertical_weight="1.5"
        android:elevation="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/categoryTextViewDataLayout"
        app:layout_constraintEnd_toEndOf="@id/categoryViewDataLayout"
        app:layout_constraintStart_toStartOf="@+id/categoryViewDataLayout"
        app:layout_constraintTop_toTopOf="@+id/categoryViewDataLayout" />

    <TextView
        android:id="@+id/categoryTextViewDataLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center"
        app:layout_constraintVertical_weight="0.5"
        android:text="Category"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/categoryViewDataLayout"
        app:layout_constraintEnd_toEndOf="@+id/cateogryImageViewDataLayout"
        app:layout_constraintStart_toStartOf="@+id/cateogryImageViewDataLayout"
        app:layout_constraintTop_toBottomOf="@+id/cateogryImageViewDataLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>