    <ImageView
        android:id="@+id/burgerMenuImageIconHomeLayout"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:src="@drawable/menu_icon"
        app:layout_constraintBottom_toBottomOf="@+id/viewInsideTopViewHomeLayout"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/viewInsideTopViewHomeLayout" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/LottieAdmin"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fire" />
